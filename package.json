{
  "name": "it-documentation",
  "version": "1.0.0",
  "description": "IT policies and how-to guides documentation",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "lint": "markdownlint '**/*.md' --ignore node_modules --ignore .git",
    "lint:fix": "markdownlint '**/*.md' --ignore node_modules --ignore .git --fix"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "markdownlint-cli": "^0.39.0"
  },
  "lint-staged": {
    "*.md": [
      "markdownlint --fix"
    ]
  }
}

